/**
 * @brief config.get - Get configuration value
 */
static esp_err_t api_config_get(const cJSON *params, ts_api_result_t *result)
{
    if (params == NULL) {
        ts_api_result_error(result, TS_API_ERR_INVALID_ARG, "Missing parameters");
        return ESP_ERR_INVALID_ARG;
    }
    
    cJSON *key = cJSON_GetObjectItem(params, "key");
    if (key == NULL || !cJSON_IsString(key)) {
        ts_api_result_error(result, TS_API_ERR_INVALID_ARG, "Missing 'key' parameter");
        return ESP_ERR_INVALID_ARG;
    }
    
    cJSON *data = cJSON_CreateObject();
    cJSON_AddStringToObject(data, "key", key->valuestring);
    
    /* Try to get as different types */
    int64_t int_val;
    bool bool_val;
    double dbl_val;
    char str_val[256];
    
    if (ts_config_get_int(key->valuestring, &int_val) == ESP_OK) {
        cJSON_AddNumberToObject(data, "value", (double)int_val);
        cJSON_AddStringToObject(data, "type", "int");
    } else if (ts_config_get_bool(key->valuestring, &bool_val) == ESP_OK) {
        cJSON_AddBoolToObject(data, "value", bool_val);
        cJSON_AddStringToObject(data, "type", "bool");
    } else if (ts_config_get_double(key->valuestring, &dbl_val) == ESP_OK) {
        cJSON_AddNumberToObject(data, "value", dbl_val);
        cJSON_AddStringToObject(data, "type", "double");
    } else if (ts_config_get_str(key->valuestring, str_val, sizeof(str_val)) == ESP_OK) {
        cJSON_AddStringToObject(data, "value", str_val);
        cJSON_AddStringToObject(data, "type", "string");
    } else {
        cJSON_Delete(data);
        ts_api_result_error(result, TS_API_ERR_NOT_FOUND, "Key not found");
        return ESP_ERR_NOT_FOUND;
    }
    
    ts_api_result_ok(result, data);
    return ESP_OK;
}

/**
 * @brief config.set - Set configuration value
 */
static esp_err_t api_config_set(const cJSON *params, ts_api_result_t *result)
{
    if (params == NULL) {
        ts_api_result_error(result, TS_API_ERR_INVALID_ARG, "Missing parameters");
        return ESP_ERR_INVALID_ARG;
    }
    
    cJSON *key = cJSON_GetObjectItem(params, "key");
    cJSON *value = cJSON_GetObjectItem(params, "value");
    
    if (key == NULL || !cJSON_IsString(key)) {
        ts_api_result_error(result, TS_API_ERR_INVALID_ARG, "Missing 'key' parameter");
        return ESP_ERR_INVALID_ARG;
    }
    
    if (value == NULL) {
        ts_api_result_error(result, TS_API_ERR_INVALID_ARG, "Missing 'value' parameter");
        return ESP_ERR_INVALID_ARG;
    }
    
    esp_err_t ret = ESP_FAIL;
    const char *type = "unknown";
    
    if (cJSON_IsNumber(value)) {
        double dbl = value->valuedouble;
        if (dbl == (int64_t)dbl) {
            ret = ts_config_set_int(key->valuestring, (int64_t)dbl);
            type = "int";
        } else {
            ret = ts_config_set_double(key->valuestring, dbl);
            type = "double";
        }
    } else if (cJSON_IsBool(value)) {
        ret = ts_config_set_bool(key->valuestring, cJSON_IsTrue(value));
        type = "bool";
    } else if (cJSON_IsString(value)) {
        ret = ts_config_set_str(key->valuestring, value->valuestring);
        type = "string";
    } else {
        ts_api_result_error(result, TS_API_ERR_INVALID_ARG, "Unsupported value type");
        return ESP_ERR_INVALID_ARG;
    }
    
    if (ret != ESP_OK) {
        ts_api_result_error(result, TS_API_ERR_INTERNAL, "Failed to set value");
        return ret;
    }
    
    cJSON *data = cJSON_CreateObject();
    cJSON_AddStringToObject(data, "key", key->valuestring);
    cJSON_AddStringToObject(data, "type", type);
    cJSON_AddStringToObject(data, "status", "set");
    
    ts_api_result_ok(result, data);
    return ESP_OK;
}

/**
 * @brief config.delete - Delete configuration value
 */
static esp_err_t api_config_delete(const cJSON *params, ts_api_result_t *result)
{
    if (params == NULL) {
        ts_api_result_error(result, TS_API_ERR_INVALID_ARG, "Missing parameters");
        return ESP_ERR_INVALID_ARG;
    }
    
    cJSON *key = cJSON_GetObjectItem(params, "key");
    if (key == NULL || !cJSON_IsString(key)) {
        ts_api_result_error(result, TS_API_ERR_INVALID_ARG, "Missing 'key' parameter");
        return ESP_ERR_INVALID_ARG;
    }
    
    esp_err_t ret = ts_config_erase(key->valuestring);
    if (ret != ESP_OK) {
        ts_api_result_error(result, TS_API_ERR_NOT_FOUND, "Key not found or delete failed");
        return ret;
    }
    
    cJSON *data = cJSON_CreateObject();
    cJSON_AddStringToObject(data, "key", key->valuestring);
    cJSON_AddStringToObject(data, "status", "deleted");
    
    ts_api_result_ok(result, data);
    return ESP_OK;
}

/**
 * @brief config.list - List configuration keys
 */
static esp_err_t api_config_list(const cJSON *params, ts_api_result_t *result)
{
    const char *prefix = NULL;
    
    if (params) {
        cJSON *pfx = cJSON_GetObjectItem(params, "prefix");
        if (pfx && cJSON_IsString(pfx)) {
            prefix = pfx->valuestring;
        }
    }
    
    /* Get iterator */
    ts_config_iterator_t iter;
    esp_err_t ret = ts_config_iterate_start(&iter, prefix);
    if (ret != ESP_OK) {
        ts_api_result_error(result, TS_API_ERR_INTERNAL, "Failed to start iteration");
        return ret;
    }
    
    cJSON *data = cJSON_CreateObject();
    cJSON *keys = cJSON_AddArrayToObject(data, "keys");
    
    char key[64];
    while (ts_config_iterate_next(&iter, key, sizeof(key)) == ESP_OK) {
        cJSON_AddItemToArray(keys, cJSON_CreateString(key));
    }
    
    ts_config_iterate_end(&iter);
    
    if (prefix) {
        cJSON_AddStringToObject(data, "prefix", prefix);
    }
    
    ts_api_result_ok(result, data);
    return ESP_OK;
}

/**
 * @brief config.save - Force save configuration
 */
static esp_err_t api_config_save(const cJSON *params, ts_api_result_t *result)
{
    esp_err_t ret = ts_config_commit();
    if (ret != ESP_OK) {
        ts_api_result_error(result, TS_API_ERR_INTERNAL, "Failed to save configuration");
        return ret;
    }
    
    cJSON *data = cJSON_CreateObject();
    cJSON_AddStringToObject(data, "status", "saved");
    
    ts_api_result_ok(result, data);
    return ESP_OK;
}

/*===========================================================================*/
/*                      Register Config APIs                                  */
/*===========================================================================*/

esp_err_t ts_api_register_config_apis(void)
{
    static const ts_api_endpoint_t config_apis[] = {
        {
            .name = "config.get",
            .description = "Get configuration value",
            .category = TS_API_CAT_CONFIG,
            .handler = api_config_get,
            .requires_auth = false,
            .permission = NULL
        },
        {
            .name = "config.set",
            .description = "Set configuration value",
            .category = TS_API_CAT_CONFIG,
            .handler = api_config_set,
            .requires_auth = true,
            .permission = "config.write"
        },
        {
            .name = "config.delete",
            .description = "Delete configuration value",
            .category = TS_API_CAT_CONFIG,
            .handler = api_config_delete,
            .requires_auth = true,
            .permission = "config.write"
        },
        {
            .name = "config.list",
            .description = "List configuration keys",
            .category = TS_API_CAT_CONFIG,
            .handler = api_config_list,
            .requires_auth = false,
            .permission = NULL
        },
        {
            .name = "config.save",
            .description = "Force save configuration",
            .category = TS_API_CAT_CONFIG,
            .handler = api_config_save,
            .requires_auth = true,
            .permission = "config.write"
        }
    };
    
    return ts_api_register_multiple(config_apis, 
                                     sizeof(config_apis) / sizeof(config_apis[0]));
}
